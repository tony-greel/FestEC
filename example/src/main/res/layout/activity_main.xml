<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <androidx.viewpager.widget.ViewPager
      android:id="@+id/main_vp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="51dp">

  </androidx.viewpager.widget.ViewPager>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_gravity="center_vertical|bottom"
      android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_main_recommend"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
      <ImageView
          android:id="@+id/img_home"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:background="@mipmap/ic_launcher"
          android:gravity="center"
          android:layout_marginTop="3dp"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="首页"
          android:textSize="10sp"
          android:textColor="#73d3f6"
          android:gravity="center|bottom"
          android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/ll_main_science"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
      <ImageView
          android:id="@+id/img_classification"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:background="@mipmap/ic_launcher"
          android:gravity="center"
          android:layout_marginTop="3dp"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="分类"
          android:textSize="10sp"
          android:gravity="center|bottom"
          android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/ll_main_journalism"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
      <ImageView
          android:id="@+id/img_popular"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:background="@mipmap/ic_launcher"
          android:gravity="center"
          android:layout_marginTop="3dp"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="热点"
          android:textSize="10sp"
          android:gravity="center|bottom"
          android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/ll_main_automobile"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
      <ImageView
          android:id="@+id/img_personal"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:background="@mipmap/ic_launcher"
          android:gravity="center"
          android:layout_marginTop="3dp"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="我的"
          android:textSize="10sp"
          android:gravity="center|bottom"
          android:layout_marginBottom="5dp"/>
    </LinearLayout>
  </LinearLayout>
</FrameLayout>